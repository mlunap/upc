<div class="inbox">
  <h2>Clientes</h2>
  <div class="col-md-12 chit-chat-layer1-left" style="font-size: 14px;padding-left: 0px; padding-right: 0px;">
    <div class="work-progres">
      <div class="chit-chat-heading" style="text-align: right;">
        <%= link_to 'Nuevo', new_cliente_path, class: 'hvr-grow btn btn_principal' %>
      </div>
      <div class="table-responsive">
        <table class="table table-hover mb-none">
          <thead>
          <tr>
            <th>Ruc</th>
            <th>Razón social</th>
            <th>Dirección</th>
            <th>Telefono</th>
            <th>Estado</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @clientes.each do |cliente| %>
            <tr>
              <td><%= cliente.ruc %></td>
              <td><%= cliente.razon_social %></td>
              <td><%= cliente.direccion %></td>
              <td><%= cliente.telefono %></td>
              <td><%= cliente.descripcion %></td>
              <td><%= link_to raw('<i class="fa fa-list-alt" aria-hidden="true"></i>'), cliente, title: 'Ver Detalle'%></td>
              <td><%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>'), edit_cliente_path(cliente), title: 'Editar' %></td>
              <td><%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>'), cliente, method: :delete, data: { confirm: 'Esta seguro de eliminar registro?' }, title: 'Eliminar' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



