<div class="inbox">
  <h2>Clientes</h2>
  <div class="portlet-grid panel-primary col-md-12">
    <div class="panel-heading">
      <div class="panel-actions">
        <%= link_to '', edit_cliente_path(@cliente), class: 'fa fa-pencil', style: 'color:#ffffff;', title: 'Editar' %>
        <%= link_to '', clientes_path, class: 'fa fa-times', title: 'Cerrar Ventana' %>
      </div>
      <h3 class="panel-title">Detalle de Cliente</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <strong>Ruc:</strong>
          <%= @cliente.ruc %>
        </div>

        <div class="col-md-6">
          <strong>Razon social:</strong>
          <%= @cliente.razon_social %>
        </div>

        <div class="col-md-6">
          <strong>Direccion:</strong>
          <%= @cliente.direccion %>
        </div>

        <div class="col-md-6">
          <strong>Telefono:</strong>
          <%= @cliente.telefono %>
        </div>

        <div class="col-md-6">
          <strong>Estado:</strong>
          <%= @cliente.estado %>
        </div>

        <div class="col-md-6">
          <strong>Usuario creacion:</strong>
          <%= @cliente.usuario_creacion %>
        </div>

        <div class="col-md-6">
          <strong>Fecha creacion:</strong>
          <%= @cliente.fecha_creacion.strftime("%Y-%m-%d %H:%M:%S") %>
        </div>

        <div class="col-md-6">
          <strong>Usuario modificacion:</strong>
          <%= @cliente.usuario_modificacion %>
        </div>

        <div class="col-md-6">
          <strong>Fecha modificacion:</strong>
          <%= @cliente.fecha_modificacion.nil? ? "" : @cliente.fecha_modificacion.strftime("%Y-%m-%d %H:%M:%S") %>
        </div>
      </div>
    </div>
  </div>

</div>
